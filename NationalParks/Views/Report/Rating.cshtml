<div class="">
    <form asp-action="GenerateRatingReportPdf" asp-controller="Pdf" method="post" class="container mt-xxl-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 p-4 border rounded shadow-sm bg-white">

                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary">⭐ Rating Report</h2>
                    <p class="text-muted">Select the order to generate the ratings PDF.</p>
                </div>

                <div class="mb-4">
                    <label for="order" class="form-label">📈 Order</label>
                    <select id="order" name="order" class="form-control" required>
                        <option value="DESC">Highest Rated</option>
                        <option value="ASC">Lowest Rated</option>
                    </select>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4 py-2">
                        🧾 Generate PDF
                    </button>
                </div>

            </div>
        </div>
    </form>
</div>
