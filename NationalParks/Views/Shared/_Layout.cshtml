<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NationalParks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NationalParks.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NationalParks</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <ul class="navbar-nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-primary"><i class="fas fa-user"></i> @User.Identity.Name</span>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Place" asp-action="List">Place</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Visitor" asp-action="List">Visitor</a>
                                    </li>
                                    <li>
                                        <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                                            <ul class="navbar-nav">
                                                <li class="nav-item dropdown">
                                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        Maintenances
                                                    </a>
                                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                                                        <li><a class="dropdown-item" asp-area="" asp-controller="Card" asp-action="List">Cards</a>
                                                        <li><a class="dropdown-item" asp-area="" asp-controller="Country" asp-action="List">Country</a></li>
                                                        <li><a class="dropdown-item" asp-area="" asp-controller="Location" asp-action="List">Location</a>
                                                        <li><a class="dropdown-item" asp-area="" asp-controller="SiteType" asp-action="List">SiteType</a></li>
                                                        <li><a class="dropdown-item" asp-area="" asp-controller="Species" asp-action="List">Species</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                        
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="PlaceRating" asp-action="List">PlaceRating</a>
                                    </li>

                                   @*  <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Ticket" asp-action="List">Ticket</a>
                                    </li> *@
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="TicketSale" asp-action="List">TicketSale</a>
                                    </li>
                                }

                              
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-success" asp-controller="Account" asp-action="Login">
                                        <i class="fas fa-sign-in-alt"></i> Login
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-info" asp-controller="Account" asp-action="Register">
                                        <i class="fas fa-user-plus"></i> Register
                                    </a>
                                </li>
                            }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - NationalParks - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
