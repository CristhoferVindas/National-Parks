<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 p-4 border rounded shadow-sm bg-white">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">🔐 Login</h2>
                <p class="text-muted">Enter your credentials to access the system.</p>
            </div>

            <form method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">📧 Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required />
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label">🔑 Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="••••••••" required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4 py-2">Iniciar sesión</button>
                </div>
            </form>
        </div>
    </div>
</div>
