@model NationalParks.Models.User

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 p-4 border rounded shadow-sm bg-white">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">📝 Register</h2>
                <p class="text-muted">Create a new account to access the system.</p>
            </div>

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">👤 Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Your name" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">📧 Email</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">🔑 Password</label>
                    <input name="password" type="password" class="form-control" placeholder="••••••••" required />
                </div>

                <div class="mb-4">
                    <label for="confirmPassword" class="form-label">🔒 Confirm Password</label>
                    <input name="confirmPassword" type="password" class="form-control" placeholder="••••••••" required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4 py-2">Register</button>
                </div>

                <div class="text-danger mt-3" asp-validation-summary="All"></div>
            </form>
        </div>
    </div>
</div>
