@model List<NationalParks.Models.ViewModels.UserWithRolesViewModel>

<h2 class="text-center mt-4">Lista de Usuarios</h2>
<div class="container mt-4">
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Roles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userWithRolesViewModel in Model)
            {
                <tr>
                    <td>@userWithRolesViewModel.User.Name</td>
                    <td>@userWithRolesViewModel.User.Email</td>
                    <td>@string.Join(", ", userWithRolesViewModel.Roles)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
