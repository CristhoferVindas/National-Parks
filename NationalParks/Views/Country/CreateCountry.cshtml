@model NationalParks.Models.Country

<div class="container mt-4">
    <h2 class="text-center text-primary">Create New Country</h2>
</div>

<div class="container mt-4">
    <form asp-action="CreateCountry" asp-controller="Country">
        <div class="mb-3">
            <label for="CountryName" class="form-label">Country Name</label>
            <input type="text" class="form-control" id="Name" placeholder="Enter Country Name" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label for="Continent" class="form-label">Continent</label>
            <input type="text" class="form-control" id="Continent" placeholder="Enter Continent" asp-for="Continent" />
        </div>

        <button type="submit" class="btn btn-primary">Create Country</button>
    </form>
</div>