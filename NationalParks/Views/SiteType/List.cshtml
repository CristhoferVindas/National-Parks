@{
}
@model List<NationalParks.Models.SiteType>

<div class="container mt-4">
    <h2 class="text-center text-primary">SiteType Management</h2>
</div>

<div class="container mt-4">
    <a class="btn btn-primary btn-sm mb-2" asp-action="CreateSiteType" asp-controller="SiteType" >Create SiteType</a>
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var SiteType in Model)
            {
                <tr>
                    <td>@SiteType.Name</td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-action="EditSiteType" asp-controller="SiteType" asp-route-id="@SiteType.Id">Edit</a>
                        <a id="DeleteSiteTypeID" class="btn btn-danger btn-sm" asp-action="DeleteSiteType" asp-controller="SiteType" asp-route-id="@SiteType.Id"  data-delete="SiteType">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="~/js/SiteType.js"></script>
}